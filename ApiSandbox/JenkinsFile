node {
   	def mvnHome
   	stage('Clone API') { 
		dir('Application') {
			git(url:'$ApplicationGitUrl', credentialsId:'JonGithub')
     	}
   	}
   	stage('Build API Sandbox') {
   		dir('ApiSandbox') {
   			git(url:'https://github.com/jonbuck16/api-sandbox.git', credentialsId:'JonGithub')
      		mvnHome = tool 'M3'
	      	withEnv(["MVN_HOME=$mvnHome"]) {
	      		sh '"$MVN_HOME/bin/mvn" -DskipTests clean package'
	      	}
   		}
   	}
   	stage ('Create API Sandbox') {
		pom = readMavenPom file: './Application/pom.xml'
		sh "docker build --build-arg API_DEFINITION=./Application/${APIDefinitionPath} --build-arg JAR_FILE=./ApiSandbox/target/api-sandbox-1.0.0.jar -t hsbc/${pom.artifactId}:latest -f ApiSandbox/Dockerfile ."
    }
}